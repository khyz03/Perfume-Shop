    <script>
        function openModal(productName) {
            document.getElementById(productName + 'Modal').style.display = 'flex';
        }

        function closeModal(productName) {
            document.getElementById(productName + 'Modal').style.display = 'none';
        }

        function increaseQuantity(productName) {
            const input = document.getElementById('quantity' + productName);
            input.value = parseInt(input.value) + 1;
        }

        function decreaseQuantity(productName) {
            const input = document.getElementById('quantity' + productName);
            if (input.value > 1) {
                input.value = parseInt(input.value) - 1;
            }
        }
    </script>
